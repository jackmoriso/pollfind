# Polymarket API URLs
POLYMARKET_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com

# Polygon RPC (optional, for on-chain queries)
POLYGON_RPC_URL=https://polygon-rpc.com

# Monitoring Settings
POLL_INTERVAL_MS=5000
MIN_TRADE_SIZE_USD=2500

# Alert Thresholds
ALERT_LARGE_TRADE=10000    # $10k+
ALERT_WHALE_TRADE=50000    # $50k+
ALERT_VOLUME_SPIKE=2.0     # 2x normal volume
ALERT_PRICE_MOVE=0.10      # 10% price change

# Markets to Watch (comma-separated market IDs, leave empty for all)
# Example: WATCH_MARKETS=market_id_1,market_id_2
WATCH_MARKETS=

# Wallets to Track (comma-separated addresses)
# Example: WATCH_WALLETS=0x1234...,0x5678...
WATCH_WALLETS=

# Telegram Bot (optional)
# Get bot token from @BotFather on Telegram
# Get chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Webhook (optional)
# Create webhook in Discord server settings > Integrations
DISCORD_WEBHOOK_URL=

# Database
DATABASE_PATH=./data/trades.db
